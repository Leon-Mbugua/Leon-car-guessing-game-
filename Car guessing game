<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Guessing Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      text-align: center;
      padding: 2rem;
    }
    #game-container {
      background: white;
      max-width: 600px;
      margin: auto;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }
    input, button {
      padding: 0.5rem;
      font-size: 1rem;
      margin: 0.5rem;
    }
    #hint {
      margin-top: 1rem;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div id="game-container">
    <h1>Guess the Car Brand!</h1>
    <p id="hint">Hint will appear here</p>
    <input type="text" id="guess" placeholder="Your guess...">
    <button onclick="checkGuess()">Submit</button>
    <p id="feedback"></p>
    <button onclick="newRound()">Next Hint</button>
  </div>

  <script>
    const cars = [
      {
        brand: "Toyota",
        hints: [
          "Founded in 1937",
          "Known for reliability",
          "Produces sedans, SUVs, trucks, and hybrids"
        ]
      },
      {
        brand: "Ford",
        hints: [
          "Founded in 1903",
          "Invented the assembly line",
          "Known for trucks and muscle cars"
        ]
      },
      {
        brand: "BMW",
        hints: [
          "Founded in 1916",
          "German luxury vehicles",
          "Known for performance and design"
        ]
      },
      {
        brand: "Tesla",
        hints: [
          "Founded in 2003",
          "Focuses on electric vehicles",
          "Known for Autopilot and Model S, 3, X, Y"
        ]
      }
    ];

    let currentCar;
    let hintIndex = 0;

    function newRound() {
      currentCar = cars[Math.floor(Math.random() * cars.length)];
      hintIndex = 0;
      document.getElementById("hint").innerText = currentCar.hints[hintIndex];
      document.getElementById("feedback").innerText = "";
      document.getElementById("guess").value = "";
    }

    function checkGuess() {
      const guess = document.getElementById("guess").value.trim().toLowerCase();
      if (guess === currentCar.brand.toLowerCase()) {
        document.getElementById("feedback").innerText = "Correct! It's " + currentCar.brand + "!";
      } else {
        document.getElementById("feedback").innerText = "Wrong guess. Try again!";
        if (hintIndex < currentCar.hints.length - 1) {
          hintIndex++;
          document.getElementById("hint").innerText = currentCar.hints[hintIndex];
        }
      }
    }

    // Start the game on load
    window.onload = newRound;
  </script>
</body>
</html>
